///===============if的用户====================================

SELECT sum(if(pay_money>100,1,0)) as tj_num FROM orders

///===============CASE用户====================================
SELECT
CASE
WHEN pay_money>=0 and pay_money<100 THEN
    '100'
WHEN pay_money>=100 and pay_money<200 THEN
    '200'
ELSE
    '300'
END AS test 
FROM
    orders
